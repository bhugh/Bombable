<?xml version="1.0"?>
  <PropertyList> 
    <path>fuel_pressure.ac</path>
    <texture-path>Textures</texture-path>
    <animation> 
      <type>rotate</type>
      <object-name>needle</object-name>
      <property>/sim/model/camel/fuel-pressure</property>
      <factor>18</factor>
      <axis> 
        <x>-1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </animation>

	<animation> 
		<type>select</type>
		<condition>
			<property>sim/model/camel/extra-details</property>
		</condition>
	</animation> 

	<!-- *** LoD *** -->
    <animation> 
      <type>range</type>
      <min-m>0</min-m>
      <max-m>5</max-m>
    </animation>
  </PropertyList>
